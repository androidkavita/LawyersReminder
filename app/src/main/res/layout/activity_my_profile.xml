<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"

                        android:background="@color/theme_blue"
                        android:gravity="bottom">

                        <RelativeLayout
                            android:id="@+id/rlImg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_pict"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/user_image_place_holder"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/llEditProfile"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@id/rlImg"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:visibility="gone"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/white_outline_background"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:layout_marginEnd="@dimen/_5sdp"
                                android:fontFamily="@font/roboto_regular"

                                android:gravity="center"
                                android:text="Edit Profile"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_edit_pen"
                                app:tint="@color/white" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gone"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@id/rlImg"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>

                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Full Name"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvFullName"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:inputType="text"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Phone Number"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvNumber"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Email Id"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvEmail"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/additional"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Firm Name"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvFirmName"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Bar Association"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvBarAssociation"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Bar Council Number"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvBarCouncilNumber"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Address"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvAddress"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/focus"
                                android:elevation="@dimen/_5sdp"
                                android:hint=""
                                android:textColorHint="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"                                android:inputType="number"
                                android:maxLength="40"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>



















                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_background"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:weightSum="1"
                            android:id="@+id/llChangePassword"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Change Password"
                                android:textColor="@color/theme_blue"
                                android:textSize="@dimen/_12sdp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"

                                android:text="* * * * * * * * *"
                                android:textColor="@color/textgray"
                                android:textSize="@dimen/_12sdp"
                                />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/icon_next"
                                    android:textColor="@color/theme_blue"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="end"
                                    />



                            </LinearLayout>

                        </LinearLayout>


                            <TextView
                                android:id="@+id/delete_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delete Account"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:paddingVertical="@dimen/_15sdp"
                                android:background="@drawable/white_background"
                                android:textColor="@color/theme_blue"
                                />





                    </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="top">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/white_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_toEndOf="@+id/arrow"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>

        </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>